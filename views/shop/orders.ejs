<%- include('../includes/head.ejs') %>
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
        <main>
            <% if (orders.length) { %>
                <ul>
                    <% orders.forEach(order => { %>
                        <li>
                            <h1><%= order._id %></h1>
                            <ul>
                                <% order.items.forEach(p => { %>
                                    <li>
                                        <%= p.title %>
                                        (<%= p.quantity %>)
                                    </li>
                                <% }); %>
                            </ul>
                        </li>
                    <% }); %>
                </ul>
            <% } else { %>
                <h1>Nothing there!</h1>
            <% } %>
        </main>
        <%- include('../includes/end.ejs') %>
